{
  "appId": "com.kin2.workforce",
  "productName": "Kin2 Workforce",
  "copyright": "Copyright Â© 2025 Kin2 Workforce",
  "directories": {
    "output": "release",
    "buildResources": "electron"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "win": {
    "target": [
      "nsis",
      "portable"
    ],
    "icon": "electron/icon.ico",
    "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}"
  },
  "mac": {
    "target": [
      "dmg",
      "zip"
    ],
    "category": "public.app-category.business",
    "icon": "electron/icon.icns",
    "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb",
      "rpm"
    ],
    "category": "Office",
    "icon": "electron/icon.png",
    "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  }
}
